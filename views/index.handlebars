<div class="container">
    <div class="jumbotron">
        <h2>Mongoose Scraper</h2>
    </div>
    {{!-- jumbotron --}}
    {{#each article}}
    <div class="panel panel-primary">
        <div class="panel-heading">
           <div class="row">
            <div class="col-sm-10">
               <h3>{{this.title}}</h3> 
            </div>
            <div class="col-sm-2">
                <button type="button" class="btn btn-info btn-success" data-id="{{this._id}}" data-toggle="modal" data-target="#myModal" id="getNote">Notes</button>
            </div>   
           </div>
        </div>
        <div class="panel-body">
            <a href="{{this.link}}">{{this.link}}</a>
            <p>{{this.body}}</p>
        </div>
        <div id="myModal" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Your Note</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="comment">Note:</label>
                    <textarea class="form-control" rows="5" id="body"></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" data-id="{{this._id}}" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
            </div>

        </div>
    </div>
{{!-- modal --}}
    </div>
    {{/each}}
    {{!-- panel --}}

</div>
{{!-- container --}}

